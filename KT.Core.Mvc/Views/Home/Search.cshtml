@{
    @using KT.Core.Mvc.Models;
}
<h1 class="text-center">Search Results for: (@ViewData["Title"])</h1>
@if (Model != null && Model.Count > 0)
{
    foreach (wp_image item in Model)
    {
        <li><a href="~/@item.url" target="_new" class="btn btn-block">@item.name</a></li>
        @if (item.content != null && item.content.Length > 0)
        {
            <div class="row">
                <div class="col-sm-6 col-md-3">
                    <a href="#" class="thumbnail">
                        <img src="data:image/png;base64,@Convert.ToBase64String(item.content)" alt="@item.name" title="@item.name">
                    </a>
                </div>
            </div>
        }
    }
}
else
{
    <h3>No matching results found ...</h3>
}
